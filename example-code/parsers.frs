
def mkInput(code, position) {
  {
    code: code
    position: position
  }
}

def advance(input) {
  {
    code: input.code
    position: input.position + 1
  }
}

def setPosition(input, pos) {
  {
    code: input.code
    position: pos
  }
}

def nextChar(input) {
  input.code[input.position]
}

